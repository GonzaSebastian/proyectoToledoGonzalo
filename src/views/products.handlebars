<h2>Products</h2>
<hr />
<table class="table table-striped">
  <thead>
    <td><strong>Producto</strong></td>
    <td><strong>Descripción</strong></td>
    <td><strong>Categoria</strong></td>
    <td><strong>Precio</strong></td>
    <td><strong>Código</strong></td>
    <td><strong>Stock</strong></td>
    <td></td>
  </thead>
  {{#each products.docs}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.code}}</td>
      <td>{{this.stock}}</td>
      <td><button class="btn btn-primary" onclick="addProductToCart(`{{this._id}}`)">Agregar al carrito</button></td> 
    </tr>
  {{/each}}
</table>
<div>
  {{#if products.hasPrevPage}}
        <a href="{{products.prevLink}}">Anterior</a>
  {{/if}}  
  {{#if products.hasNextPage}}
    <a href="{{products.nextLink}}">Siguiente</a>
  {{/if}}
</div>
<script>
  addProductToCart = (pid) => {
  fetch(`/api/carts/64bc1dcc88d41704658a8670/products/${pid}`, {
    method: 'post',
  })
  .then(result => {
    if(result.status === 'error') throw new Error(result.error)
  })
}
</script>

